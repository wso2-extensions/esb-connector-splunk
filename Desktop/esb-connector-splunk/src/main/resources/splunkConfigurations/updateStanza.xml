<template xmlns="http://ws.apache.org/ns/synapse" name="updateStanza">
    <parameter name="appName" description="Name of the app to list all configuration files"/>
    <parameter name="configFileName" description="Name of the configuration file"/>
    <parameter name="stanzaName" description="Name of the configuration file"/>
    <parameter name="dataFields" description="Arbitrary number of key/value pairs."/>
    <sequence>
        <property name="uri.var.appName" expression="$func:appName"/>
        <property name="uri.var.configFileName" expression="$func:configFileName"/>
        <property name="uri.var.stanzaName" expression="$func:stanzaName"/>
        <property name="uri.var.dataFields" expression="$func:dataFields"/>
        <script language="js"><![CDATA[
             var dataFields = mc.getProperty('dataFields');
             var urlQuery = '';

             if (dataFields != "null" && dataFields != "") {
                urlQuery += dataFields;
             }
             if (urlQuery != null && urlQuery != "") {
                urlQuery = '?' + urlQuery;
             }
             mc.setProperty('uri.var.urlQuery', urlQuery);
            ]]>
        </script>
        <property name="messageType" scope="axis2" type="STRING" value="application/x-www-form-urlencoded"/>
        <call>
            <endpoint>
                <http method="POST"
                      uri-template="https://{uri.var.hostname}:{uri.var.port}/servicesNS/nobody/{uri.var.appName}/configs/conf-{uri.var.configFileName}/{uri.var.stanzaName}{+uri.var.urlQuery}"/>
            </endpoint>
        </call>
    </sequence>
</template>
