<component name="splunkConfigurations" type="synapse/template">
    <subComponents>
        <component name="createConfigFile">
            <file>createConfigFile.xml</file>
            <description>Create a configuration file.</description>
        </component>
        <component name="deleteStanza">
            <file>deleteStanza.xml</file>
            <description>Delete {stanza} in {file} configuration file.</description>
        </component>
        <component name="getAppConfigFiles">
            <file>getAppConfigFiles.xml</file>
            <description>List all the configuration files available for the app.</description>
        </component>
        <component name="getStanza">
            <file>getStanza.xml</file>
            <description>Returns all the stanza names in the named configuration file.</description>
        </component>
        <component name="addStanza">
            <file>addStanza.xml</file>
            <description>Add stanzas to the {file} configuration file.</description>
        </component>
        <component name="updateStanza">
            <file>updateStanza.xml</file>
            <description>Update or add property to {stanza} in {file} configuration file.</description>
        </component>
    </subComponents>
</component>