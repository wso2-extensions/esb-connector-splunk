<component name="savedSearch" type="synapse/template" >
    <subComponents>
        <component name="createSavedSearch" >
            <file>createSavedSearch.xml</file>
            <description>Create a saved search for the user that is available from the app</description>
        </component>
        <component name="accessSavedSearch">
            <file>accessSavedSearch.xml</file>
            <description>Access saved search configurations that you have permission to view</description>
        </component>
        <component name="updateSavedSearch">
            <file>updateSavedSearch.xml</file>
            <description>Update a named saved search.</description>
        </component>
        <component name="deleteSavedSearch">
            <file>deleteSavedSearch.xml</file>
            <description>Delete a named saved search.</description>
        </component>
        <component name="shareSavedSearch">
            <file>shareSavedSearch.xml</file>
            <description>Share the saved search and change its permission.</description>
        </component>
        <component name="moveSavedSearch">
            <file>moveSavedSearch.xml</file>
            <description>
                Make the saved search available for all users and change the context to a different app which was
                previously available to all in the context of default app
            </description>
        </component>
    </subComponents>
</component>
